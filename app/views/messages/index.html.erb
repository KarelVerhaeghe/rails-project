<h1>Your messages</h1>

<%= link_to "Send Laus your own message", new_message_path, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <% @messages.reverse.each do |message|  %>
    <div class="col-xs-12">
        <p>From: <%= message.name %></p>
        <p><%= message.content %></p>
    </div>
    <% end %>
  </div>
</div>

